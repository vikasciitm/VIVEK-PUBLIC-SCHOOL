<h1 class="text-center text-danger m-3 card card-body">Create new Student.</h1>
<div class="col-lg-12">
	<%= form_with model: @secondeary do |f|%>
		<!--<%# if @secondeary.errors.any?%>
		<div class="col-lg-12">
			<p class="lead">please fix errors below</p>
			<%# @secondeary.errors.full_messages.each do |message|%>
				<p><%#= message%></p>
			<%# end%>
		</div>
	<%# end%> -->
	<div class="d-flex">
		<div class="col-lg-5 m-3">
			<%= f.label "first_name",class: "mb-2"%>
			<%= f.text_field "first_name",class: "form-control form-control-lg"%>
			<% @secondeary.errors.full_messages_for(:first_name).each do |message|%>
				<p class="text-danger"><%= message%></p>
			<% end%>
		</div>
		<div class="col-lg-5 m-3">
			<%= f.label "last_name",class: "mb-2"%>
			<%= f.text_field "last_name",class: "form-control form-control-lg"%>
		</div>
	</div>
	<div class="d-flex">
		<div class="col-lg-3 m-3">
			<%= f.label "dob",class: "mb-2"%>
			<%= f.text_field "dob",class: "form-control form-control-lg"%>
			<% @secondeary.errors.full_messages_for(:dob).each do |message|%>
				<p class="text-danger"><%= message%></p>
			<% end%>
		</div>
		<div class="col-lg-5 m-3">
			<%= f.label "email",class: "mb-2"%>
			<%= f.text_field "email",class: "form-control form-control-lg"%>
			<% @secondeary.errors.full_messages_for(:email).each do |message|%>
				<p class="text-danger"><%= message%></p>
			<% end%>
		</div>
		<div class="col-lg-3 m-3">
			<%= f.label "mobil nu",class: "mb-2"%>
			<%= f.text_field "number",class: "form-control form-control-lg"%>
			<% @secondeary.errors.full_messages_for(:number).each do |message|%>
				<p class="text-danger"><%= message%></p>
			<% end%>
		</div>
	</div>
	<div class="d-flex">
		<div class="col-lg-4 m-3">
			<%= f.label "Address",class: "mb-2"%>
			<%= f.text_field "add",class: "form-control form-control-lg"%>
			<% @secondeary.errors.full_messages_for(:add).each do |message|%>
				<p class="text-danger"><%= message%></p>
			<% end%>
		</div>
		<div class="col-lg-4 m-3">
			<%= f.label "image",class: "mb-2"%>
			<%= f.file_field "image",class: "form-control form-control-lg"%>
			<% @secondeary.errors.full_messages_for(:image).each do |message|%>
				<p class="text-danger"><%= message%></p>
			<% end%>
		</div>
	</div>
	<%= f.submit class: "btn btn-lg btn-primary m-3"%>
	<%= link_to "Back to Students","/secondearies", class: "btn btn-lg btn-outline-primary m-3"%>
	<% end%>
	
</div>